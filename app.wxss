.text-invert{color: #fff;}

.clearfixed{
    zoom: 1;
}
.clearfixed::after{
    content: '';
    display: block;
    clear: both;
    visibility: hidden;
    height: 0;
}
.fl{
    float: left;
}
.fr{
    float: right;
}
image{
    display: block;
}
.navigator-hover {
    background-color:transparent;
    opacity:1;
    }    
.scrollTop-icon{
    position: fixed;
    z-index: 1000;
    width: 37px;
    height: 37px;
    right: 30rpx;
    bottom: 130rpx;
}
.ellipseTwoLine{
    display: -webkit-box;
    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}
.ellipseOneLine{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.loading-more-tip{
    padding: 30rpx 0;
    width: 100%;
    text-align: center;
    font-size: 16px;
    color: #333;
}
/* 购物车 */
/* 提示 */
.cart-num{
    position: absolute;
    top: -4px;
    right: 14px;
    z-index: 966;
    display: block;
    width: 18px;
    height: 18px;
    line-height: 18px;
    border-radius: 100%;
    background: #e4393c;
    font-size: 10px;
    text-align: center;
    color: #fff;
}
.typeCart{
    position: absolute;
    right: 20rpx;
    bottom: 16rpx;
    width: 25px;
    height: 25px;
    border-radius: 2px;
    background-color: #f02b2b;
}
.typeCart::after{
    position: absolute;
    top:50%;
    left: 50%;
    transform:translate(-50%,-50%);
    content: '';
    width: 15px;
    height: 15px;
    background-image: url(//m.360buyimg.com/babel/jfs/t19954/149/1197396512/53003/d995012f/5b1792e9Ncc0da2b3.png);
    background-size: 297px 291.5px;
    background-position: -15px -253.5px;
}
.arrow{
    position: relative;
}
.arrow::after{
    position: absolute;
    right: 2px;
    top: 50%;
    margin-top: -5px;
    content: '';
    width: 10px;
    height: 10px;
    border-right: 2px solid #999;
    border-top: 2px solid #999;
    border-radius:2px;
    transform: rotate(45deg);   
}
