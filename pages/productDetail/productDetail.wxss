@import "../iconfont/iconfont.wxss";
page{
    background: #f8f8f8;
}
/* tab导航 */
.tab-wrap{
    position:fixed;
    top:0;
    left:0;
    z-index:999;
    width:100%;
    box-sizing:border-box;
    padding:0 70rpx;
    background:rgba(255,255,255,1);
    box-shadow: 0 2px 5px rgba(0,0,0,.1);
}
.tab-item{
    flex:1;
    padding:20rpx;
    font-size:15px;
    text-align:center;
}
.cur{
    color:#e4393c;
    font-weight:normal;
}
/* 产品区域 */
.page-wrap{
    margin-top:80rpx;
    height:1126rpx;
    padding-bottom:57px;
}
.product-info{
    padding: 30rpx 0 20rpx;
    background: #fff;
}
.product-pic-wrap{ 
    height:750rpx;
}
.product-pic{
    width:100%;
    height:750rpx;
}
.product-title-wrap{
    position: relative;
    height: 42px;
}
.rate-num{
    color: #e4393c;
}
.product-title{
    padding: 0 30rpx;
    width: 70%;
    height: 42px;
    line-height: 22px;
    border-right: 1px solid #eee;
    font-size:16px;
    color:#333;
    background: #fff;
}
.rate-wrap{
    position: absolute;
    top: -4rpx;
    right: 50rpx;
    text-align: center;
    background: #fff;
}
.rate-txt{
    color: #666;
    font-size: 14px;
}
.product-price{
    padding:0 30rpx;
    margin-top:12px;
}
.product-marketPrice{
    font-size:22px;
    color:#e4393c;
}
.product-originPrice{
    margin-left:20rpx;
    font-size:14px;
    color:#666;
    text-decoration:line-through;
}

/* 计算器 */
.calculator-wrap{
    position:absolute;
    bottom:30rpx;
    left: 30rpx;
}
.calculator-wrap .small-title{
    margin-right: 24rpx;
}
.addrr-wrap,.type-wrap{
    position: relative;
    justify-content: flex-start;
    margin-top: 20rpx;
    padding: 20rpx 30rpx;
    background: #fff;
}
.small-title{
    color: #666;
    font-size: 14px;
}
.addr{
    flex: 1;
    margin-left: 40rpx;
    font-size: 16px;
    color: #333;
}
.type-wrap{
    align-items: flex-start;
    padding-bottom: 100rpx;
}
.type-list{
    flex: 1;
    margin-left: 24rpx;
}
.type-list-item{
    float: left;
    font-size: 14px;
    padding: 10rpx 20rpx;
    border: 1px solid #ccc;
    border-radius: 2px;
    margin: 0 20rpx 20rpx 0;
}
.curType{
    border-color: #e4393c;
    color: #e4393c;
}
/* 底部固定菜单 */
.bottom-menu{
    position: fixed;
    left: 0;
    bottom: 0;
    justify-content: flex-start;
    width: 100%;
    height: 56px;
    background: #fff;
    border-top: 1px solid #eee;
}
.buy-btn,.add-cart{
    flex: 1;
    line-height: 56px;
    background: #e4393c;
    color: #fff;
    font-size: 16px;
    text-align: center;
}
.add-cart{
    background: #ff9600;
}
.cart-wrap,.collection-wrap{
    width: 70px;
    text-align: center;
    font-size: 12px;
    color: #333;
}
/* 提示 */
.collection-wrap{
    border-right: 1px solid #eee;
}
.icon-collect:before{
    color: #333;
    font-size: 18px;
}
.icon-cart{
    position: relative;
}
.icon-cart:before{
    color: #666;
    font-size: 22px;
}
.collected .icon-collect-wrap{
    animation: scaleAnimation .6s ease;
}
.collected{
    color: #e4393c;
}
@keyframes scaleAnimation{
    0%{
        transform:scale(1);
    }
    70%{
        transform:scale(1.4);
    }
    100%{
        transform:scale(1);
    }
}
.collected .icon-collect:before{
    color: #e4393c;
}
.add-animation{
    position:absolute;
    top:-5px;
    right:14px;
    z-index: 999;
    font-size:12px;
    color:#e4393c;
    opacity:0;
}
.addAnimation{
    animation:addAnimationAction 1.3s ease;
}
@keyframes addAnimationAction{
    0%{
        opacity:0;
    }
    70%{
        opacity:1;
        transform:scale(1.5) translateY(-16px);
    }
    100%{
        opacity:0;
        transform: scale(1) translateY(-16px);
    }
}
/* 评价 */
.comment-section{
    padding: 0 30rpx 10rpx;
    margin-top: 20rpx;
    background: #fff;
}
.comment-list-wrap{
    padding-bottom: 10rpx;
    padding-top: 10rpx;
    border-bottom: 1px solid #eee;
}
.comment-list-wrap:last-child{
    border-bottom: none;
}
.title{
    padding: 24rpx 30rpx;
    font-size: 14px;
    color: #333;
    border-bottom: 1px solid #eee;
}
.comment-section .title{
    padding-left:0;
}
.comment-rate{
    margin-left: 30rpx;
    font-size: 12px;
    color: #e4393c;
}
.comment-num-wrap{
    margin: 4rpx 20rpx 0;
    float: right;
    font-size: 13px;
    color: #666;
}
.comment-num{
    margin: 0 4px;
}
.comment-flag{
    margin: 40rpx 0 10rpx;
}
.comment-flag-item{
    float: left;
    padding: 0 10rpx;
    margin: 0 16rpx 16rpx 0;
    height: 25px;
    line-height: 25px;
    background: #fdf0f0;
    font-size: 11px;
    color: #666;
}
.blueBg{
    background:#f7f7f7
}
.user{
    display: inline-block;
    vertical-align: middle;
    color: #999;
    font-size: 12px;
}
.star{
    display: inline-block;
    vertical-align: middle;
    width: 75px;
    margin-left: 8px;
    height: 15px;
    background-position: 0 -200px;
    background-image: url(//wq.360buyimg.com/fd/base/img/detail/old/detail_v1_3.png?t=20141125);
    background-repeat: no-repeat;
    background-size: 100px auto;
}
.time{
    float: right;
    margin-top: 9rpx;
    color: #999;
    font-size: 12px;
}
.comment-info{
    margin: 10rpx 0;
    color: #333;
    font-size: 14px;
}
.comment-img{
    margin-top: 20rpx;
    justify-content: flex-start;
}
.comment-img image{
    float: left;
    display: block;
    width: 158rpx;
    height: 158rpx;
    margin-right: 18rpx;
    margin-bottom: 20rpx;
}
.comment-img image:nth-child(4n){
    margin-right: 0rpx;
}
/* 推荐 */
.recommend-slider{
    margin: 0;
}
.recommend-section{
    margin-top: 30rpx;
    position: relative;
    background: #fff;
    padding-bottom: 0rpx;
}
/* 商品详情 */
.detail-section{
    margin-top: 30rpx;
    background: #fff;
    padding-bottom: 51px;
}
.detail-tab{
   border-bottom: 1px solid #ddd;
}
.detail-tab-item{
    height: 40px;
    line-height: 40px;
    flex: 1;
    border-left: 1px solid #ddd;
    text-align: center;
    font-size: 14px;
    color: #333;
}
.curDetailTabItem{
    color: #d91100;
}
.detail-info-wrap{
    overflow: hidden;
}
.detail-conts-wrap{
    position: relative;
    width: 100%;
    transition: all 0.3s ease;
}
.detail-cont:first-child{
    position: relative;
}
.detail-cont{
    position: absolute;
    top: 0px;
    width: 100%;
    background: #fff;
}
.detail-cont:nth-child(2){
    left: 100%;
    height: 1000rpx;
    padding-top: 30rpx;
    text-align: center;
}
.detail-cont:nth-child(3){
    left: 200%;
    height: 1000rpx;
    padding-top: 30rpx;
    text-align: center;
}
.detail-pic{
    width: 100%;
}

