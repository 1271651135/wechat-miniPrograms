    height: 25px;
    background: url("//m.360buyimg.com/babel/jfs/t22252/159/763654568/404/8078f6c1/5b1792e9N85aee30c.png") #f02b2b no-repeat center center;
    background-size: 75%;
}
.promo-progress{
    position: absolute;
    left: 50%;
    top: -20px;
    z-index: 999;
    transform: translateX(-50%);
    width: 90px;
    height: 15px;
    padding-left: 18px;
    box-sizing: border-box;
    background: #fa9529;
    border-radius: 26px;
    font-size: 11px;
    color: #fff;
}
.promo-progress::before{
    position: absolute;
    top: 50%;
    left: 5px;
    transform: translateY(-50%);
    content: '';
    display: block;
    width: 9px;
    height: 11px;
    background: url("//m.360buyimg.com/babel/jfs/t19954/149/1197396512/53003/d995012f/5b1792e9Ncc0da2b3.png");
    background-size: 297px 291.5px;
    background-position: -243px -171.5px;
}
