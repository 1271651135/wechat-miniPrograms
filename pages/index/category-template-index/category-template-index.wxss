.curSliderCItem{
    transform: scale(1);
    transition: transform .5s ease;
}
.curSliderCItemMoveRight{
    transform: scale(1);
    transition: transform .5s ease;
    transform-style: preserve-3d;
    -webkit-perspective: 400px;
    animation: flipRightAnimation .5s linear forwards;
}
.curSliderCItemMoveLeft{
    transform: scale(1);
    transition: transform .5s ease;
    transform-style: preserve-3d;
    -webkit-perspective: 400px;
    animation: flipLeftAnimation .5s linear forwards;
}

@keyframes flipRightAnimation{
    0% {
		transform: translate3d(0, 20rpx, 0) perspective(400px) rotate3d(0, 1, 0, 0)
	}

	50% {
		transform: translate3d(0, 20rpx, 0) perspective(400px) rotate3d(0, 1, 0, -12deg)
	}

	100% {
		transform: translate3d(0, 20rpx, 0) perspective(400px) rotate3d(0, 1, 0, 0)
	}
}
@keyframes flipLeftAnimation{
    0% {
		transform: translate3d(0, 20rpx, 0) perspective(400px) rotate3d(0, 1, 0, 0)
	}

	50% {
		transform: translate3d(0, 20rpx, 0) perspective(400px) rotate3d(0, 1, 0, 12deg)
	}

	100% {
		transform: translate3d(0, 20rpx, 0) perspective(400px) rotate3d(0, 1, 0, 0)
	}
}
