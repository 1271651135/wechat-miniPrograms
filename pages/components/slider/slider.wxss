
.ellipseTwoLine{
    display: -webkit-box;
    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}
.recommend-lists{ 
    transition: all .3s ease;
}
.recommend-list-wrap:first-child{
    position: relative;
}
.recommend-list-wrap{
    position: absolute;
    top: 0;
    display: inline-block;
    width: 100%;
    height: 100%;
}
.recommend-list-wrap:nth-child(2){
   left: 100%;
}
.recommend-list-item{
    width: 33.33%;
    float: left;
    box-sizing: border-box;
    border-right: 1px solid #ddd; 
    border-bottom: 1px solid #ddd; 
}
.recommend-list-item .pic{
    width: 100%;
    height: 250rpx;
}
.recommend-list-item .name{
    margin: 10rpx 20rpx 0;
    height:32px;
    font-size: 12px;
    color: #333;
}
.recommend-list-item .price{
    height: 52rpx;
    line-height: 52rpx;
   color: #e4393c;
   font-size: 12px;
   margin: 2px 10px 0;
}
.recommend-list-item .price-num{
    font-size: 14px;
}
.recommend-lists-dot-wrap{
    width: 100%;
    text-align: center;
}
.recommend-lists-dot{
    display: inline-block;
    margin: 5px 3px;
    width: 4px;
    height: 4px;
    background: #000;
    opacity: .2;
    border-radius: 5px;
}
.curDot{
    opacity: 1;
    width: 10px;
    background: #e4393c;
}