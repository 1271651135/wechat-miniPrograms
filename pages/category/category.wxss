/* pages/category/category.wxss */
.container{
    position: relative;
    width: 100%;
    height: 1100rpx;
}
::-webkit-scrollbar  
{  
    width: 0;  
    height: 0; 
    color: transparent;  
}  
/* 左侧导航栏开始 */
.left-category-nav{
    position: fixed;
    top: 0;
    left: 0;
    width: 180rpx;
    height: 100%;
    background: #f8f8f8;
    font-size: 30rpx;
}

.left-category-item{
    position: relative;
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    background: #f8f8f8;
    border-top: 1px solid #d7d7d7;
    border-right: 1px solid #d7d7d7;
    line-height: 100rpx;
    text-align: center;
    font-weight: normal;
    color: #333;
}
.left-category-item.cur{
    color: #f34b4b;
    background-color: #fff;
    border-right: 1px solid #fff;
}
.left-category-item:first-child.cur{
    border-top: 1px solid #fff;
}
.left-category-item.cur::after{
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    border-left: 3px solid #f02b2b;
}
/* 左侧导航栏结束 */
/* 右侧内容开始 */
.category-cont-wrap{
    width: 100%;
    height: 100%;
    overflow: hidden;
    padding-left: 180rpx;
}
.category-cont-item{
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    text-align: center;
}

.category-cont-sclView{
    width: 100%;
    height: 100%;
    
}
.category-cont-cBox{
    padding: 20rpx 20rpx;
}
.category-title{
    position: relative;
    margin-bottom: 20rpx;
    line-height: 30px;
    display: inline-block;
    font-size: 30rpx;
    color: #666;
}
.category-title::before,.category-title::after{
    content: '';
    width: 120rpx;
    height: 1px;
    background: #ccc;
    position: absolute;
    top: 50%;
}
.category-title::before
{
   left: 0;
   transform: translate3d(-120%,-50%,0);
}
.category-title::after{
    right: 0;
    transform: translate3d(120%,-50%,0);
}
.big-image{
    width: 100%;
    height: 180rpx;
    display: block;
    background: #ccc;
    margin-top: 30rpx;
}
.category-cont-list{
    width: 100%;
    height: 100%;
    margin-top: 30rpx;
}
.category-cont-list-item{
    width: 33.33%;
    float: left;
    margin-bottom: 10rpx;
    text-align: center;
    font-size: 12px;
    color: #333;
}
.list-image{
    width: 120rpx;
    height: 120rpx;
    display: block;
    background: #ccc;
    margin: 0 auto 20rpx;
}
.list-info{
    padding:0 20rpx;
    height: 64rpx;
    display: block;
}
/* 右侧内容结束 */